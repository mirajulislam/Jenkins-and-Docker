pipeline {
    agent any
    environment {
        PATH = "C:/apache-maven-3.9.4/bin:$PATH"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                script {
                    def WORKSPACE_DIR = env.WORKSPACE+'\\'+'Simple-Maven-Test'
                    dir(WORKSPACE_DIR) {
                        bat 'mvn clean install'
                    }
                }
            }
        }
    }
}
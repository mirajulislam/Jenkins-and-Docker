pipeline {
    agent any
    environment {
        PATH = "C:/apache-maven-3.9.4/bin:$PATH"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                script {
                    def WORKSPACE_DIR = env.WORKSPACE+'\\'+'Simple-Maven-Test'
                    dir(WORKSPACE_DIR) {
                        // Build your project (e.g., using Maven)
                        bat 'mvn clean package'
                    }
                }
            }
        }
        stage('Test Docker') {
            steps {
                script {
                    def dockerVersion = bat(script: 'docker --version', returnStatus: true)
                    if (dockerVersion == 0) {
                        echo 'Docker is recognized.'
                    } else {
                        error 'Docker is not recognized.'
                    }
                }
            }
        }

        // stage('Build Docker Image') {
        //     steps {
        //         script {
        //             // Define the Docker image name and tag
        //             def dockerFileDir = env.WORKSPACE+'\\'+'Simple-Maven-Test'
        //             def dockerImage = "mirajulislam/simple-maven-test:latest"
        //             // Build Docker image using Dockerfile and tag it
        //             bat "docker build -t ${dockerImage} -f Dockerfile ."
        //         }
        //     }
        // }
    }
}


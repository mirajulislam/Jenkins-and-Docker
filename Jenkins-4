pipeline {
    agent any
    environment {
        PATH = "C:/apache-maven-3.9.4/bin:$PATH"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                script {
                    def WORKSPACE_DIR = env.WORKSPACE+'\\'+'Simple-Maven-Test'
                    dir(WORKSPACE_DIR) {
                        // Build your project (e.g., using Maven)
                        bat 'mvn clean package'
                    }
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Define the Docker image name and tag
                    def dockerImage = "mirajulislam/simple-maven-test:latest"

                    // Build the Docker image using the Dockerfile in the current directory
                    bat "docker build -t ${dockerImage} -f Dockerfile ."
                }
            }
        }
    }
}

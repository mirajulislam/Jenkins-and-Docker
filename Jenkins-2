pipeline {
    agent any

    environment {
        // Define the Git repository URL and branch
        GIT_REPO = 'https://github.com/mirajulislam/Jenkins-and-Docker.git'
        GIT_BRANCH = 'main'

        // Define the Maven tool installation
        MAVEN_TOOL = tool name: 'MAVEN', type: 'hudson.tasks.Maven$MavenInstallation'
    }

    stages {
        stage('Checkout from GitHub') {
            steps {
                // Checkout the code from GitHub using your credentials
                checkout([$class: 'GitSCM',
                    branches: [[name: GIT_BRANCH]],
                    userRemoteConfigs: [[
                        url: GIT_REPO,
                        credentialsId: 'git-hub' // Use the GitHub credentials you've configured in Jenkins
                    ]]
                ])
            }
        }

        stage('Build Spring Boot Project') {
            steps {
                // Use the configured Maven tool to build the project
                withMaven(maven: MAVEN_TOOL, mavenSettingsConfig: 'my-maven-settings') {
                    sh 'mvn clean install'
                }
            }
        }
    }

    post {
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
